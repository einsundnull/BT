<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/training_background"
    tools:context=".ActivityTraining">

    <!--    android:textColor="@color/buttonTextColor"-->
    <!--        app:layout_constraintHorizontal_bias="0.0"-->
    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/button_click_training_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_fade_false"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_grid"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_grid" />

    <ImageView
        android:id="@+id/button_click_training_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_size"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_style"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_style" />

    <ImageView
        android:id="@+id/button_click_training_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_grid"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_size"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_size" />

    <TextView
        android:id="@+id/nBackLevelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="27dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonColor"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button_training"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintEnd_toEndOf="@+id/buttonAudio"

        app:layout_constraintStart_toStartOf="@+id/buttonPosition"
        app:layout_constraintTop_toBottomOf="@+id/rectContainer" />

    <Button
        android:id="@+id/buttonAudio"
        android:layout_width="182dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button_training"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonColor" />

    <Button
        android:id="@+id/buttonPosition"
        android:layout_width="182dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:alpha="1"
        android:background="@drawable/custom_button_training"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonColor" />

    <Button
        android:id="@+id/buttonPosition2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:alpha="1"
        android:background="@drawable/custom_button_training"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosition" />

    <Button
        android:id="@+id/buttonAudio2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:alpha="1"
        android:background="@drawable/custom_button_training"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAudio" />

    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ActivityTraining">

        <Button
            android:id="@+id/button0"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerHorizontal1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/buttonTextColor_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/custom_button_training"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical1"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal1" />

        <Button
            android:id="@+id/onlyColor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/dividerHorizontal2"
            app:layout_constraintEnd_toEndOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical2"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal1" />

        <View
            android:id="@+id/dividerHorizontal2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/buttonTextColor_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />


        <Button
            android:id="@+id/button6"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical1"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="120dp"
            android:layout_height="120dp"

            app:layout_constraintStart_toEndOf="@+id/dividerVertical2"
            app:layout_constraintTop_toBottomOf="@+id/dividerHorizontal2" />

        <View
            android:id="@+id/dividerVertical1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/buttonTextColor_dark"
            android:maxWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerVertical2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/buttonTextColor_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtVwMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/training_text_color"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintStart_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_button_training_exit"
        android:text="@string/btnExitText"
        android:textColor="@color/buttonTextColor"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/button_click_training_sound_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="732dp"
        android:background="@drawable/custom_button_training_settings_sound_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonExit" />

    <ImageView
        android:id="@+id/button_click_training_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_orientation"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_sound_off"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_sound_off" />

    <ImageView
        android:id="@+id/button_click_training_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_mode"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_orientation"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_orientation" />

    <ImageView
        android:id="@+id/button_click_training_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_training_settings_color"
        app:layout_constraintStart_toEndOf="@+id/button_click_training_mode"
        app:layout_constraintTop_toTopOf="@+id/button_click_training_mode" />

    <TextView
        android:id="@+id/txtVwInterval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rectContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>